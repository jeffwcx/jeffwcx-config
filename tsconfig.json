{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages/*/src", "packages/*/*.d.ts", "eslint.config.js"]
}
